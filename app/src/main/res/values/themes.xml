<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.YandexTestTask" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Customize your light theme here. -->
    </style>

    <style name="Theme.YandexTestTask" parent="Base.Theme.YandexTestTask">
        <item name="android:background">@color/black</item>
    </style>

    <style name="BottomNavigationView">
        <item name="android:textSize">10sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">#2261BC</item>
        <item name="itemRippleColor">@null</item>
        <item name="backgroundTint">@null</item>
        <item name="android:tintMode">@null</item>
        <item name="android:foregroundTint">@null</item>
        <item name="android:tint">@null</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:buttonTint">@null</item>
        <item name="android:drawableTint">@null</item>
        <item name="android:indeterminateTint">@null</item>
        <item name="itemIconTint">@drawable/bottom_navigation_color</item>
        <item name="itemTextColor">@drawable/bottom_navigation_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">55px</item>
        <item name="android:layout_height">11px</item>
    </style>


    <style name="MyTheme.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">@dimen/font_size_22</item>
        <item name="android:fontFamily">@font/sfr_display_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="MyTheme.Button.PressedUnpressed" parent="MyTheme.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bottom_selector</item>
    </style>

    <style name="MyTheme.Button.Large" parent="MyTheme.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>

    <style name="MyTheme.Button.Small" parent="MyTheme.Button">
        <item name="android:background">@drawable/rounded_button_small</item>
    </style>

    <style name="title1" parent="Theme.YandexTestTask">
        <item name="android:textSize">@dimen/font_size_22</item>
        <item name="font">@font/sfr_display_sembold</item>
    </style>

    <style name="title2" parent="Theme.YandexTestTask">
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="font">@font/sfr_display_sembold</item>
    </style>

    <style name="title3" parent="Theme.YandexTestTask">
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="font">@font/sfr_display_medium</item>
    </style>

    <style name="title4" parent="Theme.YandexTestTask">
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="font">@font/sfr_display_regular</item>
    </style>

    <style name="text1" parent="Theme.YandexTestTask">
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="font">@font/sfr_display_regular</item>
    </style>

    <style name="text2" parent="Theme.YandexTestTask">
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="font">@font/sfr_display_sembold</item>
    </style>

    <style name="button1" parent="Theme.YandexTestTask">
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="font">@font/sfr_display_regular</item>
    </style>

    <style name="tub_text" parent="Theme.YandexTestTask">
        <item name="android:textSize">@dimen/font_size_ten</item>
    </style>

    <style name="ShapeAppearance.MyApp.MediumComponent.Rounded" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardBackgroundColor">@color/card_background_grey</item>
    </style>

    <style name="ShapeAppearance.MyApp.MediumComponent.Rounded.Inner" parent="ShapeAppearance.MyApp.MediumComponent.Rounded">
        <item name="cardBackgroundColor">@color/card_background_grey_second</item>
    </style>

    <style name="RoundedLinearLayout">
        <item name="android:background">@drawable/rounded_corners_layout</item>
    </style>


    <style name="CardViewEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@color/card_background_grey_second</item>
        <item name="android:textColor">#536DFE</item>
    </style>
</resources>
