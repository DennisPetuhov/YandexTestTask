<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popular_direction_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/card_background_grey"
    android:orientation="horizontal"
    android:theme="@style/PopularDirections">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_marginStart="@dimen/margin_16"
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:src="@mipmap/stambul">

    </androidx.appcompat.widget.AppCompatImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/popular_direction_text_view"
            style="@style/title3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/card_background_grey"
            android:text="Популярное направление" />
    </LinearLayout>

</LinearLayout>